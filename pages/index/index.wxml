<!--index.wxml-->
<view class='lunbo'>  
  <swiper class='lunbo-swiper' indicator-dots="{{indicatorDots}}"    
          autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" indicator-color="{{indicatorColor}}" indicator-active-color="{{indicatorActiveColor}}">    
          <block wx:for="{{imgUrls}}" wx:key="index">    
              <swiper-item>    
                  <!--<navigator url="{{item.link}}" hover-class="navigator-hover">-->
                      <image src="{{item.url}}" class="slide-image" width="355" height="150"/>    
                  <!--</navigator>-->
              </swiper-item>    
          </block>
  </swiper>   
</view>
<!--导航-->
<view  class="navigator">
  <navigator open-type="switchTab" url="{{'../zhuanxian/index'}}" hover-class="navhover">
      <text class="icon iconfont icon-wuliu icon-large" style="background:#a1e932;"></text>
      <view class="title">
          <text>查询线路</text>
      </view>
  </navigator>

  <navigator url="../index/shangcheng" hover-class="navhover">
      <text class="icon iconfont icon-shangcheng icon-large" style="background:#f97e0b;"></text>
      <view class="title">
          <text>特价商城</text>
      </view>
  </navigator>

  <navigator open-type="switchTab" url="../zhuanxian/add" hover-class="navhover">
      <text class="icon iconfont icon-fabu icon-large" style="background:#ff865e;"></text>
      <view class="title">
          <text>发布专线</text>
      </view>
  </navigator>
</view>
<view  class="navigator">
  <navigator url="../index/kuaidi" hover-class="navhover">
      <text class="icon iconfont icon-kuaidi icon-large" style="background:#2fb6ff;"></text>
      <view class="title">
          <text>快递100</text>
      </view>
  </navigator>

  <navigator url="../index/news" hover-class="navhover">
      <text class="icon iconfont icon-xinwen icon-large" style="background:#bb57e7;"></text>
      <view class="title">
          <text>行业新闻</text>
      </view>
  </navigator>

  <navigator url="../index/news" hover-class="navhover">
      <text class="icon iconfont icon-zixun icon-large" style="background:#5be3a8;"></text>
      <view class="title">
          <text>市内倒短车</text>
      </view>
  </navigator>
</view>

<!--查询地址-->
<view class="search-zhuanxian">
  <view class="areas">
    <navigator url="../zhuanxian/area">
        <button type="default" size="default" loading="{{false}}" class="btn-zhuanxian">{{startCity}}</button>
    </navigator>
    <view class="areas-direction">
    <text class="icon iconfont icon-huhuan icon-middle"></text>
    </view>
    <navigator url="../zhuanxian/area">
        <button type="default" size="default" loading="{{false}}" class="btn-zhuanxian">{{pointCity}}</button>
    </navigator>
  </view>
  <view class="search">
        <button class="tosel_inp" type="primary" size="default" loading="{{false}}"
                form-type="submit">查询线路</button>
      </view>
</view>

<!--专线推荐-->
